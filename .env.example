# Database Connection
# Local PostgreSQL (development)
DATABASE_URL="postgresql://USER@localhost:5432/savecontext_dev"

# User ID for local testing
USER_ID="local-user"

# ============================================
# Compaction Configuration
# ============================================

# Context usage threshold (percentage) for triggering compaction suggestions
# Range: 50-90 (default: 70)
# When conversation reaches this % of context window, compaction behavior triggers
SAVECONTEXT_COMPACTION_THRESHOLD=70

# Compaction behavior mode
# Options:
#   - auto: Automatically call context_prepare_compaction at threshold (recommended for long sessions)
#   - remind: Suggest compaction to user but let them decide (default)
#   - manual: Only compact when user explicitly requests it
SAVECONTEXT_COMPACTION_MODE=remind
